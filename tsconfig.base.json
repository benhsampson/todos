{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "composite": true,
    "incremental": true,
    "paths": {
      "@todos/*": [
        "packages/*"
      ],
    }
  },
}
